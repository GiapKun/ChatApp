<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ChatandCall_App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/start_color</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <style name="CardBackground"><item name="android:backgroundTint">@color/grey</item></style>
    <style name="TextColor"><item name="android:textColor">@color/white</item></style>
    <style name="TextColor2"><item name="android:textColor">@color/white2</item></style>
    <style name="TextColor3"><item name="android:textColor">@color/secondary_text</item></style>

    <!--    Toolbar-->
    <style name="ColorToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/dark_toolbar</item>
    </style>

    <!--    FloatingButton-->
    <style name="MyFloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/icon_background</item>
        <item name="tint">@color/white</item>
    </style>

    <!--    View-->
    <style name="MyViewStyle">
        <item name="android:background">@color/black1</item>
    </style>

    <style name="MyViewBackgroundStyle">
        <!-- Định nghĩa background cho View -->
        <item name="android:background">@drawable/background_content_bottom_night</item>
    </style>

    <!--    FrameLayout-->
    <style name="MyPictureLayoutStyle">
        <!-- Định nghĩa background cho FrameLayout -->
        <item name="android:background">@drawable/background_chat_input_night</item>
    </style>

    <style name="MyImageViewStyle">
        <!-- Định nghĩa tint cho AppCompatImageView -->
        <item name="android:tint">@color/white</item>
    </style>

    <!--    Background Header-->
    <style name="BackgroundHeader">
        <item name="android:background">@drawable/background_header_night</item>
    </style>

    <style name="ScreenBackground"><item name="android:background">@color/black1</item></style>
    <style name="ColorError"><item name="android:textColor">@color/white</item></style>
    <style name="SearchView">
        <item name="android:strokeColor">@color/white</item>
    </style>
    <style name="EdtEmail">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:drawableLeft">@drawable/ic_email</item>
    </style>
    <style name="EdtPassword">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:drawableLeft">@drawable/ic_lock</item>
    </style>
    <style name="EdtUsername">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:drawableLeft">@drawable/ic_person</item>
    </style>
</resources>