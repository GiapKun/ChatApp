<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ChatandCall_App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ChatandCall_App" parent="Base.Theme.ChatandCall_App" />
    <style name="CardBackground"><item name="android:backgroundTint">@color/color_edittext</item></style>
    <style name="TextColor"><item name="android:textColor">@color/priramy_text</item></style>
    <style name="TextColor2"><item name="android:textColor">@color/secondary_text</item></style>
    <style name="TextColor3"><item name="android:textColor">@color/black</item></style>
    <style name="TextColor4"><item name="android:textColor">@color/black1</item></style>
<!--    Toolbar-->
    <style name="ColorToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/priramy</item>
    </style>

<!--    FloatingButton-->
    <style name="MyFloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/priramy</item>
        <item name="tint">@color/white</item>
    </style>

<!--    View-->
    <style name="MyViewStyle">
        <item name="android:background">@color/priramy</item>
    </style>

    <style name="MyViewBackgroundStyle">
        <item name="android:background">@drawable/background_content_bottom</item>
    </style>

<!--    FrameLayout-->
    <style name="MyPictureLayoutStyle">
        <item name="android:background">@drawable/background_chat_input</item>
    </style>

    <style name="MyImageViewStyle">
        <item name="android:tint">@color/white</item>
    </style>

<!--    Background Header-->
    <style name="BackgroundHeader">
        <item name="android:background">@drawable/background_header</item>
    </style>

    <style name="ChangePassword">
        <item name="android:background">@color/white3</item>
    </style>

    <style name="itemBack">
        <item name="android:src">@drawable/ic_back</item>
    </style>


    <style name="ColorWhite"><item name="android:backgroundTint">@color/white</item></style>
    <style name="ColorError"><item name="android:textColor">@color/error</item></style>
    <style name="EdtEmail">
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:backgroundTint">@color/color_edittext</item>
        <item name="android:drawableLeft">@drawable/ic_email1</item>
    </style>
    <style name="EdtPassword">
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:backgroundTint">@color/color_edittext</item>
        <item name="android:drawableLeft">@drawable/ic_lock1</item>
    </style>
    <style name="EdtUsername">
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:backgroundTint">@color/color_edittext</item>
        <item name="android:drawableLeft">@drawable/ic_person1</item>
    </style>

    <style name="ScreenBackground"><item name="android:background">@color/white</item></style>
</resources>